color-fg = #ecf0f1
cell-size-default = 25px
cell-padding-default = 5px

.loader--12
  width ((cell-size-default + cell-padding-default) * 2) + 5px
  display flex
  flex-direction row
  flex-wrap wrap

  .cell
    width cell-size-default
    height cell-size-default
    background-color color-fg
    display inline-block
    margin (cell-padding-default / 2)
    opacity 0

    for num in (1..4)
      &:nth-child({num})
        animation loading--12 4.5s ease-in-out infinite (500ms * num)

@keyframes loading--12
  0%
    transform translateY(-300px)
    opacity 0
  25% ,60%
    transform translateY(0)
    opacity 1
  80%, 100%
    transform translateY(300px)
    opacity 0
